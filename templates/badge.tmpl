<svg xmlns="http://www.w3.org/2000/svg" width="{{.TotalWidth}}" height="20">
    <rect rx="3" width="{{.TotalWidth}}" height="20" fill="#555"></rect>
    <rect rx="3" x="{{.LeftWidth}}" width="{{.RightWidth}}" height="20" fill="{{.Color}}"></rect>
    <path d="M{{.LeftWidth}} 0h{{.MiddleSeparator}}v20h-{{.MiddleSeparator}}z" fill="{{.Color}}"></path>
    <g text-anchor="middle" font-family="Verdana" font-size="11">
        <text fill="#010101" fill-opacity=".3" x="{{.LeftTextWidth}}" y="{{.LeftTextHeightPlusOne}}">{{.LeftText}}</text>
        <text fill="#fff" x="{{.LeftTextWidth}}" y="{{.LeftTextHeight}}">{{.LeftText}}</text>
        <text fill="#010101" fill-opacity=".3" x="{{.RightTextWidth}}" y="{{.RightTextHeightPlusOne}}">{{.RightText}}</text>
        <text fill="#fff" x="{{.RightTextWidth}}" y="{{.RightTextHeight}}">{{.RightText}}</text>
    </g>
</svg>